            android:label="Blood Pressure"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.md2k.utilities.permission.ActivityPermission"
            android:enabled="true"
            android:exported="true"
            android:label="Permission"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ActivityWeightScale"
            android:enabled="true"
            android:exported="true"
            android:label="Weight Scale"
            android:screenOrientation="portrait" />

        <service
            android:name=".bluetooth.BleService"
            android:enabled="true" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="1cad146ed866fa3d49c3bc8376ff52af7d9970da" />

        <activity android:name=".ActivityWeightScaleManual"></activity>
    </application>

</manifest>