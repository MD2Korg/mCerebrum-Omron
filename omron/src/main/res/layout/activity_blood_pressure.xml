<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<include
		android:id="@+id/layout_three_button"
		layout="@layout/layout_three_button" />

    <LinearLayout
        android:id="@+id/layout_preference_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_three_button"
        android:orientation="vertical">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textView_weight"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="Please put on the pressure cuff and initiate a measurement"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="@color/red_A700"
				android:textStyle="bold"
				android:layout_margin="10dp" />

			<Button
				android:id="@+id/button_done"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Done" />
		</LinearLayout>

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TableLayout
				android:id="@+id/tlBloodPressure"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:stretchColumns="1"
				android:background="#eeeeee" >

				<TableRow
					android:background="#cccccc" >

					<TextView
						android:id="@+id/tvBPMLabel"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="10dp"
						android:gravity="center"
						android:layout_span="2"
						android:text="Blood Pressure" />
				</TableRow>

				<TableRow
					android:padding="5dp" >
					<TextView
						android:id="@+id/tvTimestampLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Timestamp" />
					<TextView
						android:id="@+id/tvTimestampValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

				<TableRow
					android:padding="5dp" >

					<TextView
						android:id="@+id/tvSystolicLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Systolic" />
					<TextView
						android:id="@+id/tvSystolicValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

				<TableRow
					android:padding="5dp" >
					<TextView
						android:id="@+id/tvDiastolicLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Diastolic" />
					<TextView
						android:id="@+id/tvDiastolicValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

				<TableRow
					android:padding="5dp" >
					<TextView
						android:id="@+id/tvMeanAPLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Mean Aterial" />
					<TextView
						android:id="@+id/tvMeanAPValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

				<TableRow
					android:padding="5dp" >
					<TextView
						android:id="@+id/tvPulseRateLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Pulse Rate" />
					<TextView
						android:id="@+id/tvPulseRateValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

				<TableRow
					android:padding="5dp"
					android:visibility="gone" >
					<TextView
						android:id="@+id/tvUserIDLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="User ID" />
					<TextView
						android:id="@+id/tvUserIDValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

				<TableRow
					android:padding="5dp" >
					<TextView
						android:id="@+id/tvBodyMovementLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Body Movement" />
					<TextView
						android:id="@+id/tvBodyMovementValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

				<TableRow
					android:padding="5dp" >
					<TextView
						android:id="@+id/tvIrregularPulseLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Irregular Pulse" />
					<TextView
						android:id="@+id/tvIrregularPulseValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

				<TableRow
					android:layout_height="10dp"
					android:padding="5dp"
					android:background="#00000000">
					<TextView android:layout_height="8dp" />
				</TableRow>

				<TableRow android:background="#cccccc">
					<TextView
						android:id="@+id/tvDevInfoLabel"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="10dp"
						android:gravity="center"
						android:layout_span="2"
						android:text="Device Information" />
				</TableRow>

				<TableRow
					android:padding="5dp" >
					<TextView
						android:id="@+id/tvLocalNameValue"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:layout_span="2"
						android:text="----" />
				</TableRow>

				<TableRow
					android:padding="5dp" >
					<TextView
						android:id="@+id/tvBDAddrLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Address" />
					<TextView
						android:id="@+id/tvBDAddrValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

				<TableRow
					android:padding="5dp" >
					<TextView
						android:id="@+id/tvBatteryLevelLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Battery" />
					<TextView
						android:id="@+id/tvBatteryLevelValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

				<TableRow
					android:padding="5dp" >
					<TextView
						android:id="@+id/tvCurrentTimeLabel"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Time" />
					<TextView
						android:id="@+id/tvCurrentTimeValue"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="----" />
				</TableRow>

			</TableLayout>
		</ScrollView>
	</LinearLayout>

	<ListView
		android:id="@+id/lvDeviceList"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:visibility="gone" >
	</ListView>

</RelativeLayout>
